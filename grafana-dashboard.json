{
  "dashboard": {
    "id": null,
    "title": "AI4X Performance Monitoring Dashboard",
    "description": "Comprehensive monitoring for AI4X application including latency, throughput, errors, and system metrics",
    "tags": ["ai4x", "monitoring", "performance"],
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Request Latency - 90th, 95th, 99th Percentiles",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.90, rate(ai4x_request_duration_seconds_bucket[5m]))",
            "legendFormat": "90th Percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(ai4x_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th Percentile",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(ai4x_request_duration_seconds_bucket[5m]))",
            "legendFormat": "99th Percentile",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "pointSize": 5,
              "scaleDistribution": {
                "type": "linear"
              },
              "showPoints": "never",
              "spanNulls": false,
              "stacking": {
                "group": "A",
                "mode": "none"
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 80
                }
              ]
            },
            "unit": "s"
          },
          "overrides": []
        },
        "options": {
          "legend": {
            "calcs": [],
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "single",
            "sort": "none"
          }
        }
      },
      {
        "id": 2,
        "title": "Component Latency Breakdown",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(ai4x_component_latency_seconds_bucket{component=\"LangDetection\"}[5m]))",
            "legendFormat": "Language Detection",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(ai4x_component_latency_seconds_bucket{component=\"NMT\"}[5m]))",
            "legendFormat": "NMT Service",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, rate(ai4x_component_latency_seconds_bucket{component=\"LLM\"}[5m]))",
            "legendFormat": "LLM Service",
            "refId": "C"
          },
          {
            "expr": "histogram_quantile(0.95, rate(ai4x_component_latency_seconds_bucket{component=\"TTS\"}[5m]))",
            "legendFormat": "TTS Service",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "s"
          }
        }
      },
      {
        "id": 3,
        "title": "Request Throughput (RPS)",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "sum(rate(ai4x_requests_total[5m]))",
            "legendFormat": "Requests/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "red",
                  "value": 100
                }
              ]
            },
            "unit": "reqps"
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": [
              "lastNotNull"
            ],
            "fields": ""
          },
          "text": {},
          "textMode": "auto"
        }
      },
      {
        "id": 4,
        "title": "Error Rate (%)",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 8
        },
        "targets": [
          {
            "expr": "100 * (sum(rate(ai4x_requests_total{status!=\"success\"}[5m])) / sum(rate(ai4x_requests_total[5m])))",
            "legendFormat": "Error Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 5
                }
              ]
            },
            "unit": "percent"
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": [
              "lastNotNull"
            ],
            "fields": ""
          }
        }
      },
      {
        "id": 5,
        "title": "CPU Usage",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 4,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "ai4x_cpu_usage_percent",
            "legendFormat": "CPU %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 70
                },
                {
                  "color": "red",
                  "value": 90
                }
              ]
            },
            "unit": "percent"
          }
        }
      },
      {
        "id": 6,
        "title": "Memory Usage",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 4,
          "x": 16,
          "y": 8
        },
        "targets": [
          {
            "expr": "ai4x_memory_usage_percent",
            "legendFormat": "Memory %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 70
                },
                {
                  "color": "red",
                  "value": 90
                }
              ]
            },
            "unit": "percent"
          }
        }
      },
      {
        "id": 7,
        "title": "GPU Usage",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 4,
          "x": 20,
          "y": 8
        },
        "targets": [
          {
            "expr": "ai4x_gpu_usage_percent",
            "legendFormat": "GPU %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 70
                },
                {
                  "color": "red",
                  "value": 90
                }
              ]
            },
            "unit": "percent"
          }
        }
      },
      {
        "id": 8,
        "title": "Error Distribution by Component",
        "type": "piechart",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 12
        },
        "targets": [
          {
            "expr": "sum by (component) (rate(ai4x_errors_total[5m]))",
            "legendFormat": "{{component}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            },
            "mappings": [],
            "unit": "short"
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": [
              "lastNotNull"
            ],
            "fields": ""
          },
          "pieType": "pie",
          "tooltip": {
            "mode": "single"
          },
          "legend": {
            "displayMode": "list",
            "placement": "right"
          }
        }
      },
      {
        "id": 9,
        "title": "System Resource Usage Over Time",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 12
        },
        "targets": [
          {
            "expr": "ai4x_cpu_usage_percent",
            "legendFormat": "CPU %",
            "refId": "A"
          },
          {
            "expr": "ai4x_memory_usage_percent",
            "legendFormat": "Memory %",
            "refId": "B"
          },
          {
            "expr": "ai4x_gpu_usage_percent",
            "legendFormat": "GPU %",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "percent"
          }
        }
      },
      {
        "id": 10,
        "title": "Customer Request Distribution",
        "type": "table",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 20
        },
        "targets": [
          {
            "expr": "sum by (customer, app) (rate(ai4x_requests_total[5m]))",
            "legendFormat": "",
            "refId": "A",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 80
                }
              ]
            }
          }
        },
        "options": {
          "showHeader": true
        }
      }
    ]
  }
}
